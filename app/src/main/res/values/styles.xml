<resources>

    <attr name="primaryBackground" format="color" />
    <attr name="toolbarBackground" format="color" />

    <!-- Base themes -->

    <style name="FNoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="toolbarBackground">#ff303f9f</item>
    </style>

    <style name="FNoActionBar.Dark">
        <item name="android:windowBackground">?attr/primaryBackground</item>
        <item name="primaryBackground">@color/background_material_dark</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>


    <style name="FNoActionBar.Dark.Amoled">
        <item name="primaryBackground">@android:color/black</item>
    </style>

    <!-- Base themes -->

    <style name="FActionBar" parent="Theme.AppCompat" />

    <style name="FActionBar.Dark">
        <item name="android:windowBackground">?attr/primaryBackground</item>
        <item name="primaryBackground">@color/background_material_dark</item>
    </style>


    <style name="FActionBar.Dark.Amoled">
        <item name="primaryBackground">@android:color/black</item>
    </style>

    <!-- Dialog themes -->

    <style name="FDialog" parent="Theme.AppCompat.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FDialog.Dark">
        <item name="android:windowBackground">?attr/primaryBackground</item>
        <item name="primaryBackground">@color/background_material_dark</item>
    </style>

    <style name="FDialog.Dark.Amoled">
        <item name="primaryBackground">@android:color/black</item>
    </style>

    <!-- -->

    <!-- overridden in v16 -->
    <style name="DrawerItemFontBase" />

    <style name="DrawerItem" parent="DrawerItemFontBase">
        <!--
         https://www.google.de/design/spec/patterns/navigation-drawer.html#navigation-drawer-specs
         Icons are 24dp
        -->
        <item name="android:drawablePadding">32dp</item>

        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">@dimen/abc_list_item_padding_horizontal_material</item>
        <item name="android:paddingRight">@dimen/abc_list_item_padding_horizontal_material</item>
        <item name="android:textAppearance">?attr/textAppearanceListItem</item>
    </style>

    <style name="DrawerButton" parent="DrawerItem">
        <item name="android:background">@drawable/selectable_button</item>
    </style>

    <style name="DrawerSubHeader" parent="DrawerItem">
        <item name="android:alpha">0.54</item>
        <item name="android:background">@drawable/border</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="ListItemText">
        <item name="android:textSize">16sp</item>
        <item name="android:color">?attr/colorPrimary</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ListItem" parent="ListItemText">
        <item name="android:padding">3dp</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:background">?attr/listChoiceBackgroundIndicator</item>
    </style>

    <color name="chaptersReadNone">@color/secondary_text_default_material_dark</color>
    <color name="chaptersReadSome">#ff9800</color>
    <color name="chaptersReadAll">#2196f3</color>
</resources>
