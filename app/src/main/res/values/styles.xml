<resources>

    <attr name="primaryBackground" format="color" />

    <!-- Base themes -->

    <style name="FTheme" parent="Theme.AppCompat">
        <item name="android:windowActionBar">true</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="FTheme.Dark">
        <item name="android:windowBackground">?attr/primaryBackground</item>
        <item name="primaryBackground">@color/background_material_dark</item>
    </style>


    <style name="FTheme.Dark.Amoled">
        <item name="primaryBackground">@android:color/black</item>
    </style>

    <!-- Dialog themes -->

    <style name="FDialog" parent="Theme.AppCompat.Dialog" />

    <style name="FDialog.Dark">
        <item name="android:windowBackground">?attr/primaryBackground</item>
        <item name="primaryBackground">@color/background_material_dark</item>
    </style>

    <style name="FDialog.Dark.Amoled">
        <item name="primaryBackground">@android:color/black</item>
    </style>

    <!-- -->

    <color name="chaptersReadNone">@color/secondary_text_default_material_dark</color>
    <color name="chaptersReadSome">#ff9800</color>
    <color name="chaptersReadAll">#2196f3</color>
</resources>
