<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent"
    style="@style/ListItem"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/readChapterDisplay"
        android:text="Story Title"
        android:id="@+id/storyTitle"
        style="@style/ListItemText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="2dp" />

    <TextView
        android:id="@+id/readChapterDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        style="@style/ListItemText"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:text="5/10"
        android:textColor="@color/chaptersReadSome" />

    <TextView
        android:id="@+id/downloadedChapterDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ListItemText"
        android:text="7/"
        android:textColor="#30ffffff"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/readChapterDisplay"
        android:layout_toStartOf="@+id/readChapterDisplay"
        android:paddingLeft="2dp" />
</RelativeLayout>